{
	"name" : "digital-pig/release-manager",
	"description" : "A release deployment manager for git projects",
	"keywords" : [
		"deployment",
		"git",
		"release management"
	],
	"homepage" : "http://digital-pig.com/development/release-management",
	"license" : "MIT",
	"authors" : [{
			"name" : "Paul Allsopp",
			"email" : "paul.allsopp@digital-pig.com"
		}
	],
	"repositories" : [
		{
			"url" : "https://github.com/webtop/github-php-client",
			"type" : "git"
		}
	],
	"require" : {
		"php" : ">=5.5.0",
		"slim/slim" : "^3.1",
		"slim/php-view" : "^2.0",
		"monolog/monolog" : "^1.17",
		"webtop/github-php-client" : "1.1.0"
	},
	"require-dev" : {
		"phpunit/phpunit" : ">=4.8 < 6.0"
	},
	"autoload" : {
		"psr-4" : {
			"DigitalPig\\ReleaseManager\\" : "src/classes"
		}
	},
	"autoload-dev" : {
		"psr-4" : {
			"Tests\\" : "tests/"
		}
	},
	"config" : {
		"process-timeout" : 0
	},
	"scripts" : {
		"start" : "php -S localhost:8080 -t public",
		"test" : "phpunit"
	}
}
